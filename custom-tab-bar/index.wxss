/* custom-tab-bar/index.wxss */
.frame {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 150rpx;
  border-top:2rpx solid #3cc51f;
  background-color: white;
}

.box {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.pic {
  position: relative;
  width: 80rpx;
  height: 80rpx;

}
image {
  width: 100%;
}
.text {
  width: 80rpx;
  text-align: center;
  font-size: 25rpx;
}
.dot {
  position: absolute;
  top: -10%;
  right: -10%;
  padding: 8rpx 12rpx;
  background-color: red;
  height: 24rpx!important;
  line-height: 24rpx!important;
  font-size: 24rpx!important;
  border-radius: 20rpx;
  color: white;
}