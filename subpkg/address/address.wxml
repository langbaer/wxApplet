<!--subpkg/address/address.wxml-->
<scroll-view scroll-y="true" class="adddressBoxFrame" style="height: {{wh-50}}px;">
  <view class="adddressBox" wx:for="{{addressArr}}" wx:key="item.ad">
    <view class="iconselcet" >
      <view class="select" wx:if="{{item.defaultValue}}" bindtap="selectAddress">
         <image src="/image/goodsdetail/select.png" mode="widthFix"></image>
      </view>
      <view class="select" wx:if="{{!item.defaultValue}}" bindtap="selectAddress" data-itemid="{{item.id}}">
         <image src="/image/goodsdetail/unselect.png" mode="widthFix"></image>
      </view>
    </view>
    <view class="addressContent" bindlongpress="showdelete" bindtap="hideDelete" data-itemid="{{item.id}}">
      <view class="userContact">
        <view class="userName">
          {{item.username}}
        </view>
        <view class="phone">
          {{item.phone}}
        </view>
      </view>
      <view class="fullAddress">
        {{item.address}}
      </view>
    </view>
    <view class="changeAddress" bindtap="navToChangeAddress" data-itemid="{{item.id}}">
      <view class="changeAddressBox">
        <image src="/image/goodsdetail/change.png" mode="widthFix"></image>
      </view>
    </view>
    <view class="deleteBox" wx:if="{{selectDetele===item.id}}" style="width: {{deleteheight}}rpx;" bindtap="deleteThisData" data-itemid="{{item.id}}">
        <view class="deleteBoxFrame">
          <image src="/image/goodsdetail/delete.png" mode="widthFix" class="deleteBoxImg"></image>
        </view>
      </view>
  </view>
</scroll-view>
<view class="addAddress" bindtap="navToChangeAddress">
  <view class="addAddressBox">新增收获地址</view>
</view>
